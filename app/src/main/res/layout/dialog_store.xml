<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimen_txt_20sp"
    android:background="@drawable/bg_upgrade"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm Cửa hàng"
        android:textColor="@color/ColorWhite"
        android:textAllCaps="true"
        android:textSize="@dimen/dimen_txt_title_22sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <EditText
        android:id="@+id/edtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="250dp"
        android:layout_marginTop="20dp"
        android:textSize="@dimen/dimen_txt_20sp"
        android:hint="Tên cửa hàng"
        android:textColor="@color/ColorWhite"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/edtLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="250dp"
        android:layout_marginTop="20dp"
        android:textSize="@dimen/dimen_txt_20sp"
        android:hint="Địa chỉ cơ sở"
        android:textColor="@color/ColorWhite"
        app:layout_constraintTop_toBottomOf="@+id/edtName"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/edtNumberPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="250dp"
        android:textSize="@dimen/dimen_txt_20sp"
        android:layout_marginTop="10dp"
        android:hint="Số điện thoại"
        android:textColor="@color/ColorWhite"
        app:layout_constraintTop_toBottomOf="@+id/edtLocation"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="250dp"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/dimen_txt_20sp"
        android:hint="Email"
        android:textColor="@color/ColorWhite"
        app:layout_constraintTop_toBottomOf="@+id/edtNumberPhone"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <EditText
        android:id="@+id/edtOperationTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="250dp"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/dimen_txt_20sp"
        android:hint="Thời gian hoạt động"
        android:textColor="@color/ColorWhite"
        app:layout_constraintTop_toBottomOf="@+id/edtEmail"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <EditText
        android:id="@+id/edtNumberTable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="250dp"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/dimen_txt_20sp"
        android:hint="Số lượng bàn tại cơ sở"
        android:textColor="@color/ColorWhite"
        app:layout_constraintTop_toBottomOf="@+id/edtOperationTime"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <EditText
        android:id="@+id/edtDes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="250dp"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/dimen_txt_20sp"
        android:hint="Ghi chú..."
        android:textColor="@color/ColorWhite"
        app:layout_constraintTop_toBottomOf="@+id/edtNumberTable"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnConfirmAddStore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xác nhận"
        android:minWidth="150dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/ColorWhite"
        android:background="@drawable/bg_btn_orange"
        app:layout_constraintTop_toBottomOf="@+id/edtDes"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>