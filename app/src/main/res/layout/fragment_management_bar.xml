<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".owner.FragmentManagementBar">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/boxTitleManagement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_management"
            android:padding="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icons8pool8ball48"
                app:layout_constraintRight_toLeftOf="@+id/title_Management"
                app:layout_constraintTop_toTopOf="@+id/title_Management" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icons8pool8ball48"
                app:layout_constraintLeft_toRightOf="@+id/title_Management"
                app:layout_constraintTop_toTopOf="@+id/title_Management" />


            <TextView
                android:id="@+id/title_Management"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Quản Lý Quán Bi-a"
                android:textColor="@color/ColorWhite"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hệ thống quản lý thông tin các quán bi-a"
                android:textColor="@color/ColorWhite"
                android:textSize="@dimen/dimen_btn_txt_15sp"
                app:layout_constraintLeft_toLeftOf="@+id/title_Management"
                app:layout_constraintRight_toRightOf="@+id/title_Management"
                app:layout_constraintTop_toBottomOf="@+id/title_Management" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/boxTitleManagement">

            <TextView
                android:id="@+id/txt_ListBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Danh Sách Quán Bi-a"
                android:textSize="@dimen/dimen_txt_title_22sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_DesListBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Quản lý thông tin các quán bi-a cửa bạn"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_ListBar" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnAddStore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btn_add_bar"
                android:paddingHorizontal="10dp"
                android:text="Thêm Quán Bi-a"
                android:textAllCaps="false"
                android:textColor="@color/ColorWhite"
                android:textSize="@dimen/dimen_btn_txt_15sp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvBilliardsBarManagement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintHeight_max="550dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_DesListBar" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnLogOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btn_delete"
                android:minWidth="150dp"
                android:layout_marginTop="20dp"
                android:text="Đăng Xuất"
                android:textColor="@color/ColorWhite"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rvBilliardsBarManagement" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>