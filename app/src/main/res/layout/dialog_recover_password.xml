<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_send_code"
    android:padding="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/txt_Title_Password_SendCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <EditText
        android:id="@+id/edt_Password_SendCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_xanhngoc"
        android:padding="15dp"
        android:textSize="@dimen/dimen_txt_20sp"
        android:hint="Nhập mật khẩu mới"
        app:layout_constraintTop_toBottomOf="@+id/txt_Title_Password_SendCode"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/txt_Title_AgainPassword_SendCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Password"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/edt_Password_SendCode"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <EditText
        android:id="@+id/edt_AgainPassword_SendCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập lại mật khẩu"
        android:background="@drawable/bg_xanhngoc"
        android:padding="15dp"
        android:textSize="@dimen/dimen_txt_20sp"
        app:layout_constraintTop_toBottomOf="@+id/txt_Title_AgainPassword_SendCode"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_RecoverPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:minWidth="150dp"
        android:background="@drawable/bg_btn_orange"
        android:text="Xác nhận"
        android:textColor="@color/ColorWhite"
        app:layout_constraintTop_toBottomOf="@+id/edt_AgainPassword_SendCode"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>